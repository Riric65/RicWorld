<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RicAuth Login</title>

    <meta name="google-site-verification"
          content="N1b0LZMSAZtyfp-g71v7YRCQuEErtqCWp7bcGDZ_Frw">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;600&display=swap');

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.1);
            width: 100%;
            max-width: 350px;
            text-align: center;
        }

        h2 {
            margin-top: 0;
            color: #00f260;
        }

        input {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            background: rgba(0,0,0,0.3);
            border: 1px solid #444;
            color: white;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 20px;
            background: linear-gradient(to right, #00f260, #0575e6);
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            opacity: 0.9;
        }

        .error {
            color: #ff4b2b;
            margin-bottom: 10px;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <i class="fa-solid fa-shield-halved"
           style="font-size: 3em; margin-bottom: 20px; color: #0575e6;"></i>

        <h2>RicAuth</h2>

        {% if error %}
            <div class="error">{{ error }}</div>
        {% endif %}

        <form method="POST"
              autocomplete="on"
              action="/login{% if request.args.get('rd') %}?rd={{ request.args.get('rd') }}{% endif %}">

            <input type="text"
                   name="username"
                   placeholder="Utilisateur"
                   required
                   autocomplete="username">

            <input type="password"
                   name="password"
                   placeholder="Mot de passe"
                   required
                   autocomplete="current-password">

            <button type="submit">ACCÉDER</button>
        </form>
    </div>
</body>
</html>

